generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://charlie:charlie@127.0.0.1:3306/board"
}

model User {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  posts         Post[]
  createdAt     DateTime      @default(now())
}

model Post {
  id            Int           @id @default(autoincrement())
  authorId      Int?
  subject       String
  content       String
  author        User?         @relation(fields: [authorId], references: [id])
  createdAt     DateTime      @default(now())
  files         File[]
}

model File {
  id           Int      @id @default(autoincrement())
  originalName String   
  fileName     String   
  filePath     String   
  mimeType     String   
  size         Int      
  postId       Int
  post         Post     @relation(fields: [postId], references: [id])
}